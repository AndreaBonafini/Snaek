<Window x:Class="Snaek_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snaek_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Canvas>
        <Rectangle Width="480" Height="480" Canvas.Top="20" Canvas.Left="20" Fill="Black"></Rectangle>
        <Canvas x:Name="canvas">
        </Canvas>
        <StackPanel x:Name="stkPause" Height="130" Width="185" Canvas.Top="220" Canvas.Left="165" Visibility="Hidden">
            <Button x:Name="btnRestart" Click="BtnRestart_Click" Content="Restart" FontSize="25"></Button>
            <Button x:Name="btnSettings" Click="BtnSettings_Click" Content="Setting" FontSize="25"></Button>
            <Button x:Name="btnResume" Content="Resume" Click="BtnResume_Click" FontSize="25" ></Button>
        </StackPanel>
    </Canvas>
</Window>
